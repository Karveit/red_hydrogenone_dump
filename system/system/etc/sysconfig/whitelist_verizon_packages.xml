<!-- These are configurations that must exist on all Android devices. -->
<config>

    <!-- whitelist broadcasts related to Unified Settings  -->

    <allow-implicit-broadcast action="com.verizon.provider.Settings.PHONE_STATE_MODIFY"/>
    <allow-implicit-broadcast action="com.verizon.net.CONNECTIVITY_CHANGE"/>
    <allow-implicit-broadcast action="com.verizon.net.IMS_REGISTRATION"/>
    <allow-implicit-broadcast action="com.verizon.provider.ACTION_SETTING_CHANGED"/>

    <!-- The services and apps must be whitelisted so they are always able to run in
          background -->
    <allow-in-data-usage-save package="com.LogiaGroup.LogiaDeck"/>
    <allow-in-data-usage-save package="com.verizon.mips.services"/>

<!-- The service must be whitelisted so they are always able to run. -->
    <allow-in-power-save package="com.vcast.mediamanager"/>
    <allow-in-power-save package="com.vzw.hss.myverizon"/>
    <allow-in-power-save package="com.verizon.mips.services"/>
    <allow-in-power-save package="com.LogiaGroup.LogiaDeck"/>

</config>
